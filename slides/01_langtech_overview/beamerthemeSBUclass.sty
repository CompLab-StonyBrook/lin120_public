% new block environments 
\newenvironment<>{codeblock}[1]{%
        \setbeamercolor{block title}{use=code text, bg=code text.fg}%
        \setbeamercolor{local structure}{parent=code text}%
        \begin{block}{#1}}%
        {\end{block}}

\newenvironment<>{courseblock}[1]{%
        \setbeamercolor{block title}{use=course text, bg=course text.fg}%
        \setbeamercolor{local structure}{parent=code text}%
        \begin{block}{#1}}%
        {\end{block}}

\newenvironment<>{remark}[1][\unskip]{%
    \setbeamercolor{block title}{fg=white,bg=orange!85!yellow}%
    \ifstrequal{#1}{\unskip}{%
        \begin{block}{Remark}}%
        {\begin{block}{Remark (#1)}}}%
    {\end{block}}

